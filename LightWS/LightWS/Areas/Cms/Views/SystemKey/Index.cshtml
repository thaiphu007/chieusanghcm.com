

@model SystemKeyViewModel
@{
    ViewBag.Title = "System Keys";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";

}

<div class="page-title">
    <div class="title_left">
        <h3>@ViewBag.Title <small></small></h3>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="btn btn-app" id="btInsert">
                            <span class="glyphicon glyphicon-file" aria-hidden="true"></span> @Html.Raw("Insert")
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@Html.Raw("System Keys")</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="table-responsive">
                    @Html.Action("GetList")
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="modal-title" style="font-size: 14px;"><strong id="myModalTitle">Insert</strong></div>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm(null, null, FormMethod.Get, new { name = "frm", id = "frm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12" id="myModalContent">

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="btSave" type="button" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                &nbsp;
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Html.Partial("_actionscripts")
}
